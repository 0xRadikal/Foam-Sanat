{
  "name": "foam-sanat",
  "private": true,
  "version": "1.0.0",
  "description": "Foam Sanat | PU Foam Injection Machinery - Next.js production setup",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "NODE_ENV=test tsc --project tsconfig.test.json && NODE_ENV=test node --test $(find .tests-dist -name \"*.test.js\")",
    "analyze": "source-map-explorer .next/static/chunks/*.js --html analyzer-report.html",
    "sitemap": "next-sitemap",
    "axe": "axe http://localhost:3000 --chromium --timeout 60000 --exit 0",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html --only-categories=performance,accessibility,seo,best-practices --throttling-method=devtools",
    "postbuild": "npm run sitemap",
    "preview:audits": "node ./scripts/run-preview-audits.mjs",
    "preview:e2e": "playwright test --config=playwright.config.ts --reporter=line"
  },
  "dependencies": {
    "@fontsource/vazirmatn": "^5.2.8",
    "better-sqlite3": "^12.4.6",
    "docker": "^0.2.14",
    "lucide-react": "^0.552.0",
    "next": "^14.2.33",
    "pg": "^8.16.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "redis": "^4.7.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@axe-core/cli": "4.10.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.9",
    "@types/redis": "^4.0.10",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.33",
    "lighthouse": "^12.0.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3"
  }
}
